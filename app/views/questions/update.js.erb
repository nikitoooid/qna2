document.querySelector('.question-errors').innerHTML = "<%= render "shared/errors", resource: @question %>"

<% unless @question.errors.present? %>
  document.querySelector('.question-body').innerHTML = "<%= j @question.body %>"
  document.querySelector('.question-title').innerHTML = "<%= j @question.title %>"
  
  <% if @question.files.attached? %>
    let files = document.querySelector('.question-files')
    files.innerHTML = ""
    files.insertAdjacentHTML( 'beforeend', "<%= j render @question.files %>")
  <%end%>

  <% if @question.links.any? %>
    let files = document.querySelector('.question-files')
    files.innerHTML = ""
    files.insertAdjacentHTML( 'beforeend', "<%= j render @question.links %>")
  <%end%>

  document.querySelector('.edit-question-link').classList.remove('hidden')
  document.querySelector('#edit-question').classList.add('hidden')
<% end %>